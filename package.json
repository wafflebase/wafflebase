{
  "name": "wafflebase",
  "version": "0.1.0",
  "private": true,
  "description": "Super Simple Spreadsheet",
  "scripts": {
    "dev": "concurrently \"pnpm frontend dev\" \"pnpm backend start\"",
    "build": "concurrently \"pnpm sheet build\" \"pnpm frontend build\" \"pnpm backend build\"",
    "test": "concurrently \"pnpm sheet test\" \"pnpm frontend test\" \"pnpm backend test\"",
    "verify:architecture": "pnpm frontend lint:arch && pnpm backend lint:arch",
    "verify:fast": "pnpm verify:architecture && pnpm frontend lint && pnpm frontend test && pnpm backend test && pnpm sheet test",
    "verify:frontend:chunks": "node ./scripts/verify-frontend-chunks.mjs",
    "verify:frontend:visual": "pnpm frontend test:visual",
    "verify:frontend:visual:browser": "pnpm frontend test:visual:browser",
    "verify:frontend:visual:all": "pnpm frontend test:visual:all",
    "verify:frontend:interaction:browser": "pnpm frontend test:interaction:browser",
    "verify:entropy": "node ./scripts/verify-entropy.mjs",
    "verify:self": "pnpm verify:fast && pnpm frontend build && pnpm verify:frontend:chunks && pnpm verify:frontend:visual && pnpm backend build && pnpm sheet build && pnpm verify:entropy && node ./scripts/verify-browser-lanes.mjs",
    "verify:integration": "node ./scripts/verify-integration.mjs",
    "verify:integration:local": "node ./scripts/verify-integration-local.mjs",
    "verify:integration:docker": "node ./scripts/verify-integration-docker.mjs",
    "verify:integration:repeat": "node ./scripts/verify-integration-repeat.mjs",
    "verify:full": "pnpm verify:self && pnpm verify:integration",
    "tasks:index": "node ./scripts/tasks-index.mjs",
    "tasks:archive": "node ./scripts/tasks-archive.mjs && pnpm tasks:index",
    "frontend": "pnpm --filter @wafflebase/frontend",
    "backend": "pnpm --filter @wafflebase/backend",
    "sheet": "pnpm --filter @wafflebase/sheet"
  },
  "keywords": [],
  "author": {
    "name": "hackerwins",
    "email": "susukang98@gmail.com"
  },
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.5.2",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "knip": "^5.85.0",
    "typescript": "^5.9.3"
  }
}
